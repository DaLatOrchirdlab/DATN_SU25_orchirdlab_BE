{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "DatabaseType": "postgres",
  "ConnectionStrings": {
    "Server": "Host=localhost;Database=orchid;Username=postgres;Password=postgres;Port=5432"
  },
  "Redis": {
    "Configuration": "localhost:6379",
    "InstanceName": "OrchidCache_"
  },
  "OrchidAnalyzer": {
    "PythonApiUrl": "http://localhost:8000/analyze"
  }
}
